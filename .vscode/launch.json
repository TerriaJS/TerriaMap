    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Server",
            "args": [
                "${workspaceFolder}/node_modules/terriajs-server/lib/app.js",
                "--config-file", "devserverconfig.json",
                "--public", "false"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3001",
            "webRoot": "${workspaceFolder}"
        }
    ]
}